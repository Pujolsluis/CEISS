<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pujolsluis.ceiss.android.ceiss.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"/>

    <ImageView
        android:id="@+id/logo_ceiss"
        android:layout_width="220dp"
        android:layout_height="172dp"
        android:src="@drawable/logoceiss"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#03000000"/>

    <Button
        android:id="@+id/subscribe_buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/subscribe_btn_txt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
        />

</RelativeLayout>
